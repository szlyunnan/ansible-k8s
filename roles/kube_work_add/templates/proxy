                 --hostname-override={{ key }}.{{ DOMAIN }} \

                 {% endif %}
                 {% endfor %}

                 --kubeconfig={{ APP_WORK }}/config/kube/kube-proxy.kubeconfig \
                 
                 {% if KUBE_IPVS_TAG %}

                 --masquerade-all \
                 --proxy-mode=ipvs \
                 --ipvs-min-sync-period=5s \
                 --ipvs-sync-period=5s \
                 --ipvs-scheduler=rr \

                 {% else %}

                 --proxy-mode=iptables \

                 {% endif %}

                 --cluster-cidr={{ KUBE_CNI }}"
